<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" />
    <link
      href="https://fonts.googleapis.com/css?family=Arvo"
      rel="stylesheet"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
      integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
      integrity="sha384-ODmDIVzN+pFdexxHEHFBQh5/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />
    <link rel="stylesheet" href="css/request.css" />
    <link rel="stylesheet" href="css/card.css" />
    <link rel="stylesheet" href="css/particular.css" />
    <title>User Requests</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  </head>

  <body>
    <div class="sidebar">
      <div class="logo-details">
        <i class="bx bxs-pyramid"></i>
        <span class="logo_name">RQ 24/7</span>
      </div>
      <ul class="nav-links">
        <li>
          <a href="#">
            <form action="/view-request-user" method="post">
              <input type="hidden" value="<%=email%>" name="email" />
              <input type="hidden" value="all" name="dropVal" />
              <button
                style="
                  width: 300px;
                  background-color: white;
                  color: #77619e;
                  outline: none;
                  border: none;
                "
                value="pending"
                class="link_name"
              >
                <i class="bx bxs-pyramid"></i>All Requests &nbsp;&nbsp;&nbsp;
                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              </button>
            </form>
          </a>
          <ul class="sub-menu blank">
            <li><a class="link_name" href="#">All mails</a></li>
          </ul>
        </li>

        <li>
          <div class="icon-link">
            <a href="#">
              <i class="bx bx-collection"></i>
              <span class="link_name">Filter by</span>
            </a>
            <i class="bx bxs-chevron-down arrow"></i>
          </div>
          <ul class="sub-menu">
            <li><a class="link_name" href="#">Filter By</a></li>
            <li>
              <form action="/view-request-user" method="post">
                <input type="hidden" value="<%=email%>" name="email" />
                <input type="hidden" value="approved" name="dropVal" />
                <button
                  style="
                    background-color: white;
                    color: #77619e;
                    outline: none;
                    border: none;
                    margin-bottom: 15px;
                  "
                  value="approved"
                >
                  Approved Requests
                </button>
              </form>
            </li>
            <li>
              <form action="/view-request-user" method="post">
                <input type="hidden" value="<%=email%>" name="email" />
                <input type="hidden" value="rejected" name="dropVal" />
                <button
                  style="
                    background-color: white;
                    color: #77619e;
                    outline: none;
                    border: none;
                    margin-bottom: 15px;
                  "
                  value="rejected"
                >
                  Rejected Requests
                </button>
              </form>
            </li>
            <li>
              <form action="/view-request-user" method="post">
                <input type="hidden" value="<%=email%>" name="email" />
                <input type="hidden" value="pending" name="dropVal" />
                <button
                  style="
                    background-color: white;
                    color: #77619e;
                    outline: none;
                    border: none;
                  "
                  value="pending"
                >
                  Pending Requests
                </button>
              </form>
            </li>
          </ul>
        </li>

        <li>
          <div class="icon-link">
            <a href="#">
              <i class="bx bx-book-alt"></i>
              <span class="link_name">View Status</span>
            </a>
            <i class="bx bxs-chevron-down arrow"></i>
          </div>
          <ul class="sub-menu">
            <li><a class="link_name" href="#">View Status</a></li>
            <li>
              <form action="/view-read-user" method="post">
                <input type="hidden" value="<%=email%>" name="email" />
                <input type="hidden" value="read" name="choice" />
                <button
                  style="
                    background-color: white;
                    color: #77619e;
                    outline: none;
                    border: none;
                    margin-bottom: 15px;
                  "
                  value="approved"
                >
                  Read Requests
                </button>
              </form>
            </li>
            <li>
              <form action="/view-read-user" method="post">
                <input type="hidden" value="<%=email%>" name="email" />
                <input type="hidden" value="notRead" name="choice" />
                <button
                  style="
                    background-color: white;
                    color: #77619e;
                    outline: none;
                    border: none;
                  "
                  value="rejected"
                >
                  Unread Requests
                </button>
              </form>
            </li>
          </ul>
        </li>

        <li>
          <a href="#">
            <form action="/new-request" method="post">
              <input type="hidden" value="<%=email%>" name="email" />
              <button
                style="
                  width: 300px;
                  background-color: white;
                  color: #77619e;
                  outline: none;
                  border: none;
                "
                value="pending"
                class="link_name"
              >
                <i class="bx bx-message-add"></i>Add
                Request&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              </button>
            </form>
          </a>
          <ul class="sub-menu blank">
            <li><a class="link_name" href="#">Add Request</a></li>
          </ul>
        </li>

        <li>
          <a href="/">
            <i class="bx bx-log-out"></i>
            <span class="link_name">Logout</span>
          </a>
          <ul class="sub-menu blank">
            <li><a class="link_name" href="/">Logout</a></li>
          </ul>
        </li>
        <li>
          <div class="profile-details">
            <div class="profile-content">
              <img
                src="http://www.goodmorningimagesdownload.com/wp-content/uploads/2021/12/Best-Quality-Profile-Images-Pic-Download-2023.jpg"
                alt="profileImg"
              />
            </div>
            <div style="padding: 30px 0; margin-right: auto" class="name-job">
              <div class="profile_name">User</div>
              <div style="font-size: 15px" class="profile_name"><%=email%></div>
            </div>
          </div>
        </li>
      </ul>
    </div>

    <section class="home-section">
      <% data.forEach((item,idx)=> { %>
      <div class="home-content">
        <i class="bx bx-menu"></i>
        <span class="text">User Requests</span>
        <button
          type="button"
          class="btn btn-primary btn-lg"
          id="back"
          onclick="window.history.back()"
        >
          Back
        </button>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="list-item">
            <div class="avatar-left">
              <img
                src="data:image/png;base64,"
              />
            </div>
            <div class="content">
              <h3 class="title">To : <%=item.mails.toMail%></h3>
              <p class="subtitle">
                <%=item.mails.sendDateTime.toISOString().split( "T" )[0]%>
              </p>
              <p class="subtitle">
                <%=item.mails.sendDateTime.toISOString().split( "T"
                )[1].substring(0,5)%>
              </p>
            </div>
            <div class="avatar-right">
              <% if (item.mails.read===true) { %>
              <button
                type="submit"
                style="background-color: white; outline: none; border: none"
              >
                <img src="images/read.png" />
              </button>
              <% } %> <% if (item.mails.read===false) { %>
              <button
                type="submit"
                style="background-color: white; outline: none; border: none"
              >
                <img src="images/check.png" />
              </button>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <div>
            <h3 class="subject">Subject : <%=item.mails.subject%></h3>
            <br />
            <p class="description">Description : <%=item.mails.content%></p>
          </div>
        </div>
      </div>
      <center>
        <!-- This div is for already approved / rejected -->
        <div>
          <div class="card">
            <div class="card-body">
              <div class="avatar">
                <% if (item.mails.approvedFlag === true) { %>
                <img
                  src="https://uxwing.com/wp-content/themes/uxwing/download/checkmark-cross/confirm-icon.svg"
                />
                <% } %> <% if (item.mails.pendingFlag === true) { %>
                <img
                  src="https://uxwing.com/wp-content/themes/uxwing/download/time-and-date/pending-clock-icon.svg"
                />
                <% } %> <% if (item.mails.rejectedFlag === true) { %>
                <img
                  src="https://uxwing.com/wp-content/themes/uxwing/download/checkmark-cross/cancel-icon.svg"
                />
                <% } %>
              </div>
              <div class="bottom-content">
                <% if (item.mails.approvedFlag === true) { %>
                <h3 class="title">Approved</h3>
                <% } %> <% if (item.mails.pendingFlag === true) { %>
                <h3 class="title">Pending</h3>
                <% } %> 
                <% if (item.mails.rejectedFlag === true) { %>
                <h3 class="title">Rejected</h3>
                <% } %> 
                <% if (item.mails.pendingFlag === false) { %>
                <p class="subtitle">
                  <%=item.mails.approveOrRejectTime.toISOString().split( "T"
                  )[0]%>
                </p>
                <p class="subtitle">
                  <%=item.mails.approveOrRejectTime.toISOString().split( "T"
                  )[1].substring(0,5)%>
                </p>
                <% } %>
              </div>
              <% if (item.mails.pendingFlag === false) { %>
              <p class="description"><%=item.mails.approverContent%></p>
              <% } %>
            </div>
          </div>
        </div>
      </center>
      <% }); %>
    </section>
  </body>

  <script>
    function alertBox(text) {
      alert(text);
    }
  </script>
  <script src="js/NavBar.js"></script>
</html>
