<body>
  <div class="sidebar">
    <div class="logo-details">
      <i class="bx bxs-pyramid"></i>
      <span class="logo_name">RQ 24/7</span>
    </div>
    <ul class="nav-links">
      <li>
        <a href="#">
          <form action="/view-request-admin" method="post">
            <input type="hidden" value="<%=email%>" name="email" />
            <input type="hidden" value="all" name="dropVal" />
            <button style="
                  width: 300px;
                  background-color: white;
                  color: #77619e;
                  outline: none;
                  border: none;
                " value="pending" class="link_name">
              <i class="bx bx-envelope"></i>All Requests &nbsp;&nbsp;&nbsp;
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </button>
          </form>
        </a>
        <ul class="sub-menu blank">
          <li><a class="link_name" href="#">All Requests</a></li>
        </ul>
      </li>
      <li>
        <div class="icon-link">
          <a href="#">
            <i class="bx bx-collection"></i>
            <span class="link_name">Filter by</span>
          </a>
          <i class="bx bxs-chevron-down arrow"></i>
        </div>
        <ul class="sub-menu">
          <li><a class="link_name" href="#">Filter By</a></li>
          <li>
            <form action="/view-request-admin" method="post">
              <input type="hidden" value="<%=email%>" name="email" />
              <input type="hidden" value="approved" name="dropVal" />
              <button style="
                    background-color: white;
                    color: #77619e;
                    outline: none;
                    border: none;
                    margin-bottom: 15px;
                  " value="approved">
                Approved Requests
              </button>
            </form>
          </li>
          <li>
            <form action="/view-request-admin" method="post">
              <input type="hidden" value="<%=email%>" name="email" />
              <input type="hidden" value="rejected" name="dropVal" />
              <button style="
                    background-color: white;
                    color: #77619e;
                    outline: none;
                    border: none;
                    margin-bottom: 15px;
                  " value="rejected">
                Rejected Requests
              </button>
            </form>
          </li>
          <li>
            <form action="/view-request-admin" method="post">
              <input type="hidden" value="<%=email%>" name="email" />
              <input type="hidden" value="pending" name="dropVal" />
              <button style="
                    background-color: white;
                    color: #77619e;
                    outline: none;
                    border: none;
                  " value="pending">
                Pending Requests
              </button>
            </form>
          </li>
        </ul>
      </li>

      <li>
        <a href="#">
          <form action="/add-user" method="post">
            <input type="hidden" value="<%=email%>" name="email" />
            <input type="hidden" value="all" name="dropVal" />
            <button style="
                  width: 300px;
                  background-color: white;
                  color: #77619e;
                  outline: none;
                  border: none;
                " value="pending" class="link_name">
              <i class="bx bx-add-to-queue"></i>Add
              Users&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            </button>
          </form>
        </a>
        <ul class="sub-menu blank">
          <li><a class="link_name" href="#">Add Students</a></li>
        </ul>
      </li>

      <li>
        <a href="/">
          <i class="bx bx-log-out"></i>
          <span class="link_name">Logout</span>
        </a>
        <ul class="sub-menu blank">
          <li><a class="link_name" href="/">Logout</a></li>
        </ul>
      </li>
      <li>
        <div class="profile-details">
          <div class="profile-content">
            <img
              src="http://www.goodmorningimagesdownload.com/wp-content/uploads/2021/12/Best-Quality-Profile-Images-Pic-Download-2023.jpg"
              alt="profileImg" />
          </div>
          <div style="padding: 30px 0; margin-right: auto" class="name-job">
            <div class="profile_name">Admin</div>
            <div style="font-size: 15px" class="profile_name">
              <%=email%>
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>

  <section class="home-section">
    <% data.forEach((item,idx)=> { %>
      <div class="home-content">
        <i class="bx bx-menu"></i>
        <span class="text">Admin Dashboard</span>
        <button type="button" class="btn btn-primary btn-lg" id="back" onclick="window.history.back()">
          Back
        </button>
      </div>
      <div class="card">
        <div class="card-body">
          <div class="list-item">
            <div class="avatar-left">
              <img
                src="data:image/png;base64," />
            </div>
            <div class="content">
              <h3 class="title">
                <%=email%>
              </h3>
              <p class="subtitle">
                <%=item.name%>
              </p>
            </div>
            <div class="content-right">
              <p class="subtitle">
                <%=item.mails.sendDateTime.toISOString().split( "T" )[0]%>
              </p>
              <p class="subtitle">
                <%=item.mails.sendDateTime.toISOString().split( "T" )[1].substring(0,5)%>
              </p>
            </div>
          </div>
        </div>
      </div>
      <div class="card">
        <div class="card-body">
          <div>
            <h3 class="subject">Subject : <%=item.mails.subject%>
            </h3>
            <br />
            <p class="description">Description : <%=item.mails.content%>
            </p>
          </div>
        </div>
      </div>
      <center>
        <!-- This div for yet to approve / reject -->

        <% if (item.mails.pendingFlag===true) { %>
          <div class="actions">
            <form id="approveRejectForm" action="/validate-request" method="post">
              <input type="hidden" name="id" value="<%=item.mails._id%>" />
              <input type="hidden" name="email" value="<%=item.mails.toMail%>" />
              <input type="hidden" id="keyval" name="key" value="" />

              <input style="height: 60px;width: calc(100%);" name="content" placeholder="Comments" class="form-control"
                type="text" value="" id="comment"></input>
              <span class="error" id="commentError"></span>
              <br />
              <br />
              <button type="submit" onclick="change('approve')" class="btn btn-primary btn-lg" id="approve">
                Approve
              </button>
              &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              <button type="submit" onclick="change('reject')" class="btn btn-primary btn-lg" id="reject">
                Reject
              </button>
            </form>
          </div>
          <% } %>

            <!-- This div is for already approved / rejected -->
            <% if (item.mails.approvedFlag===true || item.mails.rejectedFlag===true) { %>
              <div>
                <div class="card">
                  <div class="card-body">
                    <div class="avatar">
                      <% if (item.mails.approvedFlag===true) { %>
                        <img
                          src="https://uxwing.com/wp-content/themes/uxwing/download/checkmark-cross/confirm-icon.svg" />
                        <% } %>

                          <% if (item.mails.rejectedFlag===true) { %>
                            <img
                              src="https://uxwing.com/wp-content/themes/uxwing/download/checkmark-cross/cancel-icon.svg" />
                            <% } %>
                    </div>
                    <div class="bottom-content">
                      <% if (item.mails.approvedFlag===true) { %>
                        <h3 class="title">Approved</h3>
                        <% } %>
                          <% if (item.mails.rejectedFlag===true) { %>
                            <h3 class="title">Rejected</h3>
                            <% } %>
                              <p class="subtitle">
                                <%=item.mails.approveOrRejectTime.toISOString().split( "T" )[0]%>
                              </p>
                              <p class="subtitle">
                                <%=item.mails.approveOrRejectTime.toISOString().split( "T" )[1].substring(0,5)%>
                              </p>
                    </div>
                    <p class="description">
                      <%=item.mails.approverContent%>
                    </p>
                  </div>
                </div>
              </div>
              <% } %>
      </center>
      <% }); %>
  </section>
</body>
<script>
  function change(value) {
    event.preventDefault();
    if (document.getElementById("comment").value.trim() === "") {
      document.getElementById("commentError").innerText = "Comments can't be empty";
    } else {
      document.getElementById("commentError").innerText = "";
      var defaultEvent = event.target;
      document.getElementById("keyval").value = value;
      console.log(document.getElementById("keyval"));
      let res = document.getElementById("keyval").value;
      console.log("RESULT", res);
      var approveRejectform = document.getElementById("approveRejectForm");
      if (res === "approve" || res === "reject") {
        approveRejectform.submit()
      }
      else {
        alert('Error');
      }
    }
  }

