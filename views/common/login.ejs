<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Login</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Unna:wght@700&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
    crossorigin="anonymous"></script>
  <link rel="stylesheet" href="css/loginStyles.css" />
</head>

<body>
  <div id="loginModule">
    <div class="row">
      <div class="col-lg-6">
        <div class="img1">
          <img id="loginimg" src="images\loginpage.gif" width="500px" height="500px">
        </div>
      </div>
      <div class="col-lg-6">
        <form action="/login-user" method="post" id="loginForm">
          <h1>Login</h1>
          <hr>
          <label for="email">
            <h5>E-mail</h5>
          </label>
          <br>
          <input id="email" class="inp" type="email" name="email">
          <br>
          <span id="emailError"></span>
          <br>
          <label for="password">
            <h5>Password</h5>
          </label>
          <br>
          <input type="password" class="inp" name="password" id="password" />
          <i class="bi bi-eye-slash icon" id="togglePassword"></i>
          <br>
          <span id="passwordError"></span>
          <br />
          <a href="#">
            <h6 onclick="switchVisible()">Forgot Password ?</h6>
          </a>
          <br>
          <button id="login" class="btn btn-light" type="submit" name="submit">Login</button>
          <br>
        </form>
      </div>
    </div>
  </div>

  <div id="forgotpassModule">
    <div class="row">
      <div class="col-lg-6">
        <div class="fpform">
          <form id="fpForm">
            <h1>Forgot password</h1>
            <hr />
            <label for="email">
              <h5>E-mail</h5>
            </label>
            <br />
            <input id="fpEmail" class="inp" type="email" name="email">
            <br />
            <span id="fpEmailError"></span>
            <br />
            <button class="btn btn-light verify" type="submit" name="verify">Verify</button>
            <br><br>
            <a href="#">
              <h6 onclick="switchVisible()">Back to Login</h6>
            </a>
          </form>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="img2">
          <img src="images\forgotpass.gif" width="500px" height="500px">
        </div>
      </div>
    </div>
  </div>
  <script src="js/main.js" charset="utf-8"></script>
</body>

</html>